<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Ui.TambahActivity">

    <TextView
        android:id="@+id/tv_lbl_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Tambah Data Makanan"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/rl_tambah"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/black"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_lbl_tambah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_nama_makanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rl_tambah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/editcustom"
        android:layout_marginTop="20dp"
       android:hint="Nama Makanan"
        android:textColor="@color/black"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_harga_makanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_makanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/editcustom"
        android:layout_marginTop="15dp"
        android:hint="Harga Makanan"
        android:textColor="@color/black"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_tambah_makanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_harga_makanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Tambah Makanan"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>